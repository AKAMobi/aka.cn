#!/usr/bin/perl

use strict;
use CGI 'param','header';
use Net::SMTP;


my $q;
my ( $key, $value );

$q = new CGI;
print $q->header( -type=>'text/html',
                -charset=>'gb2312' );

open( FD, "<../../header.html" );
print <FD>;
close( FD );
print <<_HTML_;
<table width="760" cellspacing="0" cellpadding="0">
  <tr> 
    <td width="550" valign="top" rowspan="2"> 
      <table width="500" cellspacing="0" cellpadding="0" align="center">
        <tr> 
          <td valign="top"> 
            <p><br>
              <b><font color="#3366CC">您的位置：</font></b><a href="/" class="a5">阿卡首页</a> 
              <font color="#458DE4">&gt;</font> <a href="/customer/order/index.shtml" class="a5">定购</a> 
              <font color="#458DE4">&gt;</font> <span class="a5">办理国际架照</span></p>
            <p class="newstitle">办理国际驾驶执照</p>
            <p> 您已经填写并提交了如下信息，我们会在48小时之内联系您。</p>
            <p>
_HTML_

$ENV{'HOSTNAME'} = 'aka.com.cn';
$ENV{'USER'} = 'sales';
my %userpost;
#open( FD, "|mail -s \"国际架照客户订单\" sales\@aka.com.cn" );
my $maildata = '';
foreach $key ( $q->param() ){
	$value = $q->param($key);
	next if( $key eq 'Submit' );
	print "$key : $value<br>";
	$userpost{$key} = $value;
	$maildata .= "$key : $value\n"
}
close( FD );
my $smtp;
$smtp = Net::SMTP->new('localhost');
$smtp->mail( $userpost{'E-Mail'} );
$smtp->to('sales@aka.com.cn');

$smtp->data();
$smtp->datasend("From: \"" . $userpost{'姓名'} . "\" <" . $userpost{'E-Mail'} . ">\n");
$smtp->datasend("To: sales\@aka.com.cn\n");
$smtp->datasend("Subject: 国际架照订单\n");
$smtp->datasend("Date: " . `date` . "\n");
$smtp->datasend("\n");
$smtp->datasend( $maildata );
$smtp->dataend();
$smtp->quit;


print <<_HTML_;
            </td>
        </tr>
