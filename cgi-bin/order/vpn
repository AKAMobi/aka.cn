my $maildata = '';
foreach $key ( $q->param() ){
	$value = $q->param($key);
	next if( $key eq 'Submit' );
	$userpost{$key} = $value;
	print "$key : $value<br>";
	$maildata .= "$key : $value\n";
#	print "$key : $value<br>";
#	print FD "$key : $value\n"
}
#close( FD );
my $smtp;
$smtp = Net::SMTP->new('localhost');
$smtp->mail( $userpost{'E-Mail'} );
$smtp->to('sales@aka.cn');

$smtp->data();
$smtp->datasend("From: \"" . $userpost{'联系人'} . "\" <" . $userpost{'E-Mail'} . ">\n");
$smtp->datasend("To: sales\@aka.cn\n");
$smtp->datasend("Subject: VPN订单\n");
$smtp->datasend("Date: " . `date` . "\n");
$smtp->datasend("\n");
$smtp->datasend( $maildata );
$smtp->dataend();
$smtp->quit;

